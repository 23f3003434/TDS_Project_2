{
    "version": 2,
    "builds": [
      {
        "src": "app/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.10",
          "includeFiles": "app/**" 
        }
      }
    ],
    "routes": [
      {
        "src": "/api/?(.*)",  
        "dest": "app/main.py",
        "methods": ["POST"]  
      },
      {
        "src": "/(.*)",
        "dest": "app/main.py"
      }
    ]
  }